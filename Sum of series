#include <stdio.h> 
  
  
        int main () 
        
    { 

    int i, n;
    float soma = 0;
    
        printf ("Coloque o comprimento da série: ");
            scanf ("%i", &n);


    for (i = 1; i <= n; i++)
    
    {           
    
        soma = soma + (float) 1/i;
        
    if (i == 1)
        printf ("1 + ");
    
    else if (i == n)
        printf ("1/%i = ", i);
        
    else
        printf ("1/%i + ", i);
    
    
    }

        printf ("Soma da série: %f\n", soma);
        
        
    return 0; 
    
    }


